<h1 class="title"><b>Last books</b></h1>


<table>
  <tbody>
  <tr>
    <% i = 0 %>
    <% while i <= 6 %>
      <% opacity = newest_books(@new, i) * 0.1  %>
      <td style="background-color:rgb(63,183,115, <%= opacity %>);width: 50px;height: 50px" ><%= newest_books(@new, i) %></td>
      <% i += 1 %>
    <% end %>
  </tr>
  </tbody>
</table>


