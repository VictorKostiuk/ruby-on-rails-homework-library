<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <br>
  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <strong><%= f.label :email %></strong>
    </div>

    <div class="col-sm-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg'   %>
    </div>
  </div>

  <br>
  <div class="mb-3 row">

    <div class="col-sm-2 col-form-label">
      <strong><%= f.label :password %></strong>
      <p>   <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %></p>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-lg'   %>
    </div>
  </div>

  <br>
  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <strong><%= f.label :password_confirmation %></strong>
    </div>

    <div class="col-sm-9">
      <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-lg'   %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-dark mb-3 mt-2' %>
  </div>
<% end %>