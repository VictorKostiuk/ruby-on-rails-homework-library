      <% else %>
        <%= link_to(image_tag("book.svg",
                              class: 'card-img-top')) %>
      <% end %>
      <div class="card-body text-center">
        <h5 class="card-title"><%= book.name %></h5>
        <p class="card-text"><%= truncate strip_tags(book.author), length: 150 %></p>
        <%= link_to 'Show', book_path(book) %>
        <% if book.status == 'applied' %>
          <%= button_to 'Return', update_status_book_path(book, status: :ready_for_order), method: :patch, class: 'link-1' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


